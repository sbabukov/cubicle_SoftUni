<main>
  <h1>Delete Cube</h1>
  <div class="form">
    {{!--  може и без action="/" защото той си ги намира, щом гет и пост са вързани към един и същ url--}}
    <form  method="POST">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="{{name}}" disabled="true" />
      <label for="name">Description</label>
      <textarea id="name" name="description" disabled="true" />{{description}}</textarea>
      <label for="image">ImageUrl</label>
      <input type="text" id="image" name="imageUrl" value="{{imageUrl}}" disabled="true" />
      <label for="difficulty">Difficulty</label>

      {{!-- тук се маха value="{{difficultyLevel}}" защото се прави логиката със script долу --}}
      <select id="difficulty" name="difficultyLevel" disabled="true" />
      <option value="1">1 - Very Easy</option>
      <option value="2">2 - Easy</option>
      <option value="3">3 - Medium (Standard 3x3)</option>
      <option value="4">4 - Intermediate</option>
      <option value="5">5 - Expert</option>
      <option value="6">6 - Hardcore</option>
      </select>
      <input type="submit" value="Delete">
    </form>
  </div>
</main>

  {{!-- намира съответния елемент по difficultyLevel и ще му сетне селектед на тру --}}
<script>
  document.querySelector(`option[value="{{difficultyLevel}}"]`).setAttribute("selected", "true");
</script>